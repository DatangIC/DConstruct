<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/up"
        android:drawable="@drawable/ic_up"
        android:state_selected="true" />
    <item
        android:id="@+id/down"
        android:drawable="@drawable/ic_down"
        android:state_selected="false" />

    <transition
        android:drawable="@drawable/animated_down_to_up"
        android:fromId="@id/down"
        android:toId="@id/up" />

    <transition
        android:drawable="@drawable/animated_up_to_down"
        android:fromId="@id/up"
        android:toId="@id/down" />
</animated-selector>