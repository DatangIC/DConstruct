<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="onItemClick"
            type="View.OnClickListener" />

        <variable
            name="onDeleteClick"
            type="View.OnClickListener" />

        <variable
            name="onShareClick"
            type="View.OnClickListener" />

        <variable
            name="isOnce"
            type="Boolean" />

        <variable
            name="valid"
            type="Boolean" />
    </data>


    <com.datangic.swipe3.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_75dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_75dp"
            android:layout_marginHorizontal="@dimen/margin_2dp"
            android:background="@drawable/ripple_background_2"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{onItemClick}"
            android:paddingTop="@dimen/margin_4dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/key_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_12dp"
                android:tint="@{valid?@color/green:@color/grey_600 }"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_temp_pwd_36" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/key_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:hint="@string/key_name"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle1"
                app:layout_constraintLeft_toRightOf="@id/key_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/key_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:hint="@string/password_value"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
                app:layout_constraintLeft_toRightOf="@id/key_icon"
                app:layout_constraintTop_toBottomOf="@id/key_name" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/key_dead_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:hint="@string/dead_time"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintLeft_toRightOf="@id/key_icon"
                app:layout_constraintTop_toBottomOf="@id/key_value" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:gravity="center"
                android:text="@{isOnce?@string/is_once:@string/is_more}"
                android:textColor="@color/color_on_surface"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/key_value"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/share"
            android:layout_width="@dimen/width_75dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_green"
            android:onClick="@{onShareClick}"
            android:padding="@dimen/margin_20dp"
            android:src="@drawable/ic_share"
            android:visibility="@{valid?View.VISIBLE:View.GONE}"
            app:layout_constraintRight_toLeftOf="@id/delete"
            app:tint="@color/title_primary" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/delete"
            android:layout_width="@dimen/width_75dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_red"
            android:onClick="@{onDeleteClick}"
            android:padding="@dimen/margin_24dp"
            android:src="@drawable/ic_delete"
            android:visibility="@{valid?View.GONE:View.VISIBLE}"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="@color/title_primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </com.datangic.swipe3.SwipeLayout>
</layout>