<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="scanToolBarData"
            type="com.datangic.smartlock.components.ToolbarProgress" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/manager_toolbar"
            layout="@layout/toolbar_progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolBarWithProgressBar="@{scanToolBarData}" />

        <fragment
            android:id="@+id/nav_manager_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ble_tips"
            app:navGraph="@navigation/manager_navigation" />

        <TextView
            android:id="@+id/ble_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_primary"
            android:gravity="end"
            android:paddingHorizontal="@dimen/margin_32dp"
            android:paddingVertical="@dimen/margin_4dp"
            android:text="@string/ble_link_loss"
            android:textColor="@color/yellow_600"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/manager_toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>