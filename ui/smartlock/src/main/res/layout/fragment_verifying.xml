<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="editView"
            type="Boolean" />

        <variable
            name="confirmClick"
            type="View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/lock_verify"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_64dp"
            android:src="@drawable/ic_lock_128dp"
            android:tint="@color/blue_500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/loading_verify"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/loading_verify"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:src="@drawable/ic_loading_verify"
            android:tint="@color/grey_400"
            app:layout_constraintLeft_toRightOf="@id/lock_verify"
            app:layout_constraintRight_toLeftOf="@id/icon_verify"
            app:layout_constraintTop_toTopOf="@id/icon_verify" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_verify"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:src="@drawable/ic_verify_128dp"
            android:tint="@color/blue_500"

            app:layout_constraintLeft_toRightOf="@id/loading_verify"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lock_verify" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_name_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:visibility="@{editView?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/lock_verify"
            app:layout_constraintRight_toRightOf="@id/icon_verify"
            app:layout_constraintTop_toBottomOf="@id/lock_verify">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/AppTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6dp"
                android:onClick="@{confirmClick}"
                android:text="@string/confirm"
                app:layout_constraintTop_toBottomOf="@id/edit_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:visibility="@{editView?View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/lock_verify"
            app:layout_constraintRight_toRightOf="@id/icon_verify"
            app:layout_constraintTop_toBottomOf="@id/lock_verify">


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_32dp"
                android:background="@color/divider"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_48dp"
                android:src="@drawable/ic_phone_64dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dot"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:tint="@color/color_on_surface" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/dot"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_12dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:indeterminate="true"
                android:progressTint="@color/color_on_surface"
                app:layout_constraintLeft_toRightOf="@id/phone"
                app:layout_constraintRight_toLeftOf="@id/lock"
                app:layout_constraintTop_toTopOf="@id/phone"
                app:tint="@color/color_on_surface" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/verify_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/verify"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dot" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_64dp"
                app:layout_constraintLeft_toRightOf="@id/dot"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/phone"
                app:tint="@color/color_on_surface" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>