<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/check_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_48dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="3"
            tools:listitem="@layout/component_check_repair_item" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/check_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:gravity="center"
            android:hint="@string/check_repair_repair_all_properly"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
            app:layout_constraintTop_toBottomOf="@id/check_view" />

        <com.datangic.smartlock.widgets.LoadingMaterialButton
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/margin_48dp"
            android:paddingHorizontal="@dimen/margin_48dp"
            android:text="@string/check_repair_check"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/repair_btn"
            app:layout_constraintTop_toBottomOf="@id/check_text" />

        <com.datangic.smartlock.widgets.LoadingMaterialButton
            android:id="@+id/repair_btn"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:paddingHorizontal="@dimen/margin_48dp"
            android:text="@string/check_repair_repair"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle1"
            android:textColor="@color/red"
            app:layout_constraintLeft_toRightOf="@id/check_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/check_btn" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/check_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_32dp"
            android:gravity="left"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/check_btn"
            tools:ignore="RtlHardcoded" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>