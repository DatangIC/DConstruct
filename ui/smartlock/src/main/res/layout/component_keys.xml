<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="deviceKeyItem"
            type="com.datangic.smartlock.components.DeviceKeyItem" />

        <variable
            name="onDeleteClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onModifyClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onEditNameClick"
            type="android.view.View.OnClickListener" />
    </data>


    <com.datangic.swipe3.SwipeLayout
        android:id="@+id/keys_swipe"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drag_item"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginHorizontal="@dimen/margin_2dp"
            android:background="@drawable/ripple_background_2"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{onItemClick}"
            android:paddingTop="@dimen/margin_4dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/key_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_12dp"
                android:src="@{deviceKeyItem.icon}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_fingerprint_36" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/key_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:clickable="true"
                android:focusable="true"
                android:hint="@string/key_name"
                android:onClick="@{onEditNameClick}"
                android:text="@{deviceKeyItem.name}"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle1"
                app:layout_constraintLeft_toRightOf="@id/key_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/ripple_grey"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{onEditNameClick}"
                android:src="@drawable/ic_modify"
                android:tint="@color/color_on_surface"
                app:layout_constraintBottom_toBottomOf="@id/key_name"
                app:layout_constraintLeft_toRightOf="@id/key_name"
                app:layout_constraintTop_toTopOf="@id/key_name" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/key_create_at"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:hint="@string/sync_at"
                android:text="@{String.format(@string/sync_at,deviceKeyItem.syncAt)}"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
                app:layout_constraintLeft_toRightOf="@id/key_icon"
                app:layout_constraintTop_toBottomOf="@id/key_name" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/key_create_at"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--        <androidx.constraintlayout.widget.ConstraintLayout-->
        <!--            android:id="@+id/right_view"-->
        <!--            android:layout_width="@dimen/width_150dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_gravity="right"-->
        <!--            android:clickable="false"-->
        <!--            tools:ignore="RtlHardcoded">-->

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/add"
            android:layout_width="@dimen/width_75dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_green"
            android:onClick="@{onModifyClick}"
            android:padding="@dimen/margin_18dp"
            android:src="@drawable/ic_modify"
            app:layout_constraintRight_toLeftOf="@id/delete"
            app:tint="@color/title_primary" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/delete"
            android:layout_width="@dimen/width_75dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_red"
            android:onClick="@{onDeleteClick}"
            android:padding="@dimen/margin_18dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="@color/title_primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </com.datangic.swipe3.SwipeLayout>
</layout>