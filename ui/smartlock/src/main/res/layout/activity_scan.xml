<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="scanToolBarData"
            type="com.datangic.smartlock.components.ToolbarProgress" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/scan_toolbar"
            layout="@layout/toolbar_progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolBarWithProgressBar="@{scanToolBarData}" />

        <fragment
            android:id="@+id/nav_scan_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scan_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:navGraph="@navigation/scan_navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>