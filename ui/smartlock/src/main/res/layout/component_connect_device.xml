<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onEditNameClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="deviceWithBluetooth"
            type="com.datangic.smartlock.components.DeviceWithBluetooth" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="@dimen/margin_6dp"
        android:background="@drawable/ripple_background_2"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{onItemClick}"
        android:paddingTop="@dimen/margin_4dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/key_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_12dp"
            android:src="@drawable/ic_ble_lock_36dp"
            android:tint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:hint="@string/default_device_name"
            android:onClick="@{onEditNameClick}"
            android:text="@{deviceWithBluetooth.deviceName}"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle1"
            app:layout_constraintLeft_toRightOf="@id/key_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/device_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/ripple_grey"
            android:onClick="@{onEditNameClick}"
            android:src="@drawable/ic_modify"
            android:tint="@color/color_on_surface"
            app:layout_constraintBottom_toBottomOf="@id/device_name"
            app:layout_constraintLeft_toRightOf="@id/device_name"
            app:layout_constraintTop_toTopOf="@id/device_name" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/device_mac"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:text="@{deviceWithBluetooth.macAddress}"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
            app:layout_constraintLeft_toRightOf="@id/key_icon"
            app:layout_constraintTop_toBottomOf="@id/device_name" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="@dimen/margin_32dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:padding="@dimen/margin_4dp"
            android:src="@drawable/ic_selected"
            android:tint="@color/blue_500"
            android:visibility="@{deviceWithBluetooth.selected ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/device_bluetooth"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/device_bluetooth"
            android:layout_width="@dimen/margin_32dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:src="@drawable/ic_bluetooth"
            android:tint="@{deviceWithBluetooth.connect ? @color/blue_500 : @color/divider}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/key_icon"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>