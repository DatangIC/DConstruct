<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cardSetting"
            type="com.datangic.smartlock.components.CardSetting" />

        <variable
            name="lockClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="settingsClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="bleClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/setting_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            android:background="@color/background_2"
            app:cardCornerRadius="@dimen/margin_4dp"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/card_manager_setting"
                android:background="@color/background_2"
                app:bleClick="@{bleClick}"
                app:cardSetting="@{cardSetting}"
                app:lockClick="@{lockClick}"
                app:settingsClick="@{settingsClick}" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            android:background="@color/background_2"
            app:cardCornerRadius="@dimen/margin_4dp"
            app:layout_constraintTop_toBottomOf="@id/setting_card">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/manager_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_2"
                android:paddingVertical="@dimen/margin_16dp"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/component_manager_view" />

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>