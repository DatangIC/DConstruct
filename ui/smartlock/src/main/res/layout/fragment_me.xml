<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.MeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:paddingTop="@dimen/status_bar_height"
            android:paddingBottom="@dimen/margin_24dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/me_scan"
                android:layout_width="@dimen/margin_32dp"
                android:layout_height="@dimen/margin_32dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/margin_4dp"
                android:src="@drawable/ic_scan"
                android:tint="@color/title_primary"
                app:layout_constraintRight_toLeftOf="@id/me_search"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/me_search"
                android:layout_width="@dimen/margin_32dp"
                android:layout_height="@dimen/margin_32dp"
                android:layout_marginEnd="@dimen/margin_32dp"
                android:background="@drawable/ripple_grey"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/margin_4dp"
                android:src="@drawable/ic_search"
                android:tint="@color/title_primary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/me_scan" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_48dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:src="@drawable/ic_account_circle_80px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageStyle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_18dp"
                android:text="@string/user_name"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
                android:textSize="22sp"
                android:textColor="@color/title_primary"
                app:layout_constraintLeft_toRightOf="@id/user_icon"
                app:layout_constraintTop_toTopOf="@id/user_icon" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="@string/user_phone"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle2"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/user_icon"
                app:layout_constraintTop_toBottomOf="@id/user_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/settings_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_6dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/copyright"
            app:layout_constraintTop_toBottomOf="@id/user_info_layout" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:alpha="0.4"
            android:gravity="center"
            android:text="@string/copyright"
            android:textColor="@color/text_hilt"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>